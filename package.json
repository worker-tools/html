{
  "name": "@worker-tools/html",
  "version": "1.3.3",
  "description": "HTML templating and streaming response library for worker environments such as Cloudflare Workers",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js",
    "./html": "./html.js",
    "./html-response": "./html-response.js"
  },
  "files": [
    "src",
    "*.js*",
    "*.d.ts*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "shx ls index.js >> /dev/null 2>&1 || npm run build",
    "clean": "shx rm -f *.d.ts *.js *.js.map *.d.ts.map",
    "test": "shx echo \"Error: no test specified\" && shx exit 0",
    "build": "tsc -d",
    "prepack": "npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT",
  "devDependencies": {
    "@types/dompurify": "^2.3.3",
    "shx": "^0.3.4",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "dompurify": "^2.3.5",
    "whatwg-stream-to-async-iter": "^0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/worker-tools/html.git"
  },
  "bugs": {
    "url": "https://github.com/worker-tools/html/issues"
  },
  "homepage": "https://github.com/worker-tools/html#readme",
  "keywords": [
    "html",
    "service-worker",
    "templating",
    "workers",
    "streams",
    "response",
    "whatwg-streams",
    "fetch-api"
  ]
}
